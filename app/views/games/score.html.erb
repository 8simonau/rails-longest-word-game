<div class="container card shadow p-4 w-50 mt-5">
  <h1>Result</h1>

  <div>
    <% if !@enough_in_grid %>
      <p>Sorry but <strong><%= @word.upcase %></strong> can't be built out of <%= @letters.join(", ") %></p>
    <% elsif !@english %>
      <p>Sorry but <strong><%= @word.upcase %></strong> doesn't seem to be an English word</p>
    <% else %>
      <p><strong>Congratulations! </strong><%= @word.upcase %> is a valid English word!</p>
    <% end %>
    <%= link_to "Play again", "/new" %>
    <p class="mt-5">Your score is now : <%= @total_score %></p>
  </div>

</div>
