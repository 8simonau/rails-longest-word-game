<div class="container card shadow p-4 w-50 mt-5">
  <h1>New game</h1>

  <div class="letters-list">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>

  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input name="letters" type="hidden" value="<%= @letters.join %>" />
    <label class="form-label mt-3" for="word">What is the longest word you can find?</label>
    <input class="form-control mb-3" type="text" name="word" autofocus>
    <button class="btn btn-primary" type="submit">Play</button>
  </form>
  <p class="mt-5">Your current score is : <%= @total_score %></p>

</div>
